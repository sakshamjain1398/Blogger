<% include partials/header %>
<div class="ui main text container segment" >
	<h1 class="ui huge header" >Edit <%= blog.name%></h1>
	<form class="ui form" action="/blogs/<%=blog._id%>?_method=PUT" method="POST">
		<div class="field">
			<label>Title</label>
			<input type="text" name="blog[name]" placeholder="Title" value="<%=blog.name%>" required>
		</div>
		<div class="field">
			<label>Image</label>
			<input type="text" name="blog[image]" placeholder="Image" value="<%=blog.image%>" required>
		</div>
		<div class="field">
			<label>Blog Content</label>
			<textarea name="blog[body]"><%=blog.body%> </textarea>
		</div>
		<input class="ui blue big basic button" type="submit" value="Submit">
	</form>
</div>
<% include partials/footer %>