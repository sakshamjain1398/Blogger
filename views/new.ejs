<% include partials/header %>
<div class="ui main text container segment" >
	<h1 class="ui huge header" >New Blog</h1>
	<form class="ui form" action="/blogs" method="POST">
		<div class="field">
			<label>Title</label>
			<input type="text" name="blog[name]" placeholder="Title" required>
		</div>
		<div class="field">
			<label>Image</label>
			<input type="text" name="blog[image]" placeholder="Image" required>
		</div>
		<div class="field">
			<label>Blog Content</label>
			<textarea name="blog[body]"></textarea>
		</div>
		<input class="ui blue big basic button" type="submit" value="Submit">
	</form>
</div>

<% include partials/footer %>