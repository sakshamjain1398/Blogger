	<h1 class="ui huge header" ><%= blog.name %></h1>
	<div class="ui top attached ">

		<div class="ui buttons">
  <a class="ui button" href="/blogs/<%=blog._id%>/edit">Edit</a>
  <div class="or"></div>
  <form method="POST" action="/blogs/<%=blog._id%>?_method=DELETE">
